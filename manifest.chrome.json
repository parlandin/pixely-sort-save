{
  "manifest_version": 3,
  "name": "Pixely Sort & Save",
  "version": "1.1.0",
  "description": "Salva imagens rapidamente em subpastas com nome aleat√≥rio.",
  "permissions": [
    "downloads",
    "downloads",
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "host_permissions": [
   "<all_urls>",
    "https://content.dropboxapi.com/*"
  ],
  "action": {
    "default_popup": "./pages/index.html",
    "default_title": "Pixely Sort & Save",
    "default_icon": {
      "16": "icons/iconx16.png",
      "32": "icons/iconx32.png",
      "48": "icons/iconx48.png",
      "64": "icons/iconx64.png",
      "72": "icons/iconx72.png",
      "128": "icons/iconx128.png",
      "256": "icons/iconx256.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/browser-polyfill.min.js", "scripts/content_script.js"] 
    }
  ],
  "options_ui": {
    "page": "./pages/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/iconx16.png",
    "32": "icons/iconx32.png",
    "48": "icons/iconx48.png",
    "64": "icons/iconx64.png",
    "72": "icons/iconx72.png",
    "128": "icons/iconx128.png",
    "256": "icons/iconx256.png"
  }
}